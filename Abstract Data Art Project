// BasketballData class to represent basketball-related information
class BasketballData {
    private String[] teams;
    private String[] locations;
    private String[] arenas;
    private String[] capacities;
    private String[] championships;

    // Constructor to initialize BasketballData with data
    public BasketballData(String[] teams, String[] locations, String[] arenas, int[] capacities, String[] championships) {
        this.teams = teams;
        this.locations = locations;
        this.arenas = arenas;
        this.capacities = capacities;
        this.championships = championships;
    }
private static double calculateAverageCapacity(int[] capacities) {
        double sum = 0;
        for (String capacity : capacities) {
            // Assuming capacities are represented as strings, convert them to doubles for calculations
            sum += Double.parseDouble(capacity);
        }
        // Calculate the average
        return sum / capacities.length;
    }
    // Method to get stadium information by team name
    public String getStadiumInfoByTeam(String searchTeam) {
        // Implement logic to search for team and return stadium information
        // For simplicity, assuming teams and stadiums have a one-to-one relationship
        int teamIndex = -1;
        for (int i = 0; i < teams.length; i++) {
            if (searchTeam.equals(teams[i])) {
                teamIndex = i;
                break;
            }
        }

        // If team is found, return stadium information; otherwise, provide a message
        if (teamIndex != -1) {
            return "Team: " + teams[teamIndex] + "\nLocation: " + locations[teamIndex] +
                    "\nArena: " + arenas[teamIndex] + "\nCapacity: " + capacities[teamIndex] +
                    "\nChampionships: " + championships[teamIndex];
        } else {
            return "Team information not found for: " + searchTeam;
        }
    }
// toString method to provide general information about basketball data
    @Override
    public String toString() {
        return "Basketball Data Information:\n" +
                "Number of Teams: " + teams.length + "\n" +
                "Number of Locations: " + locations.length + "\n" +
                "Number of Arenas: " + arenas.length + "\n" +
                "Number of Capacities: " + capacities.length + "\n" +
                "Number of Championships: " + championships.length;
    }
}

// FileRead class to read data from files
import java.io.BufferedReader;
import java.io.FileReader;
import java.io.IOException;

class FileRead {
    private String[] data;

    // Method to read data from a file and return an array
    public String[] getStringData(int maxSize, String fileName) throws IOException {
        BufferedReader reader = new BufferedReader(new FileReader(fileName));
        data = new String[maxSize];
        for (int i = 0; i < maxSize; i++) {
            data[i] = reader.readLine();
        }
        reader.close();

        return data;
    }
}

import java.io.IOException;
import java.util.Scanner;

public class AdvertisingSpecialistConsole {
    public static void main(String[] args) throws IOException {
        // Instantiate Scanner for user input
        try (Scanner scanner = new Scanner(System.in)) {
            // Instantiate FileRead to read data from files
            FileRead fileRead = new FileRead();

            // Read data from files
            String[] teamsArray = fileRead.getStringData(30, "teams.txt");
            String[] locationsArray = fileRead.getStringData(30, "locations.txt");
            String[] arenasArray = fileRead.getStringData(30, "arenas.txt");
            String[] capacitiesArray = fileRead.getStringData(30, "capacities.txt");
            String[] championshipsArray = fileRead.getStringData(30, "championships.txt");

            // Instantiate BasketballData class with the read data
            BasketballData basketballData = new BasketballData(teamsArray, locationsArray, arenasArray, capacitiesArray, championshipsArray);

            // Print general information about basketball data
            System.out.println(basketballData);

            // Calculate and print the average stadium capacity
            double averageCapacity = calculateAverageCapacity(capacitiesArray);
            System.out.println("Average Stadium Capacity: " + averageCapacity);

            // Prompt user for input
            String userInput;
            
                System.out.println("\nEnter a valid team name to get information about their stadium:");
                userInput = scanner.nextLine();
            
           
         
        }
    }

}

